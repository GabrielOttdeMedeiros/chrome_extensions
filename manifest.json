{
  "manifest_version": 3,
  "name": "Basecamp: Progress Bars for Cards",
  "version": "1.0",
  "description": "Add a progress bar to Basecamp cards based on steps progress",
  "content_scripts": [
    {
      "matches": ["https://*.basecamp.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  }
}
